<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.detailscreen.DetailActivity">

        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/scrollView2" android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scrollbarStyle="insideInset">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tvName"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textAlignment="center"/>
                <TextView
                        android:text="Address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tvAddress"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"
                        android:textAlignment="center"/>
                <TextView
                        android:text="Phone / Email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tvPhone_Email"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvAddress"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"
                        android:textAlignment="center"/>
                <TextView
                        android:text="Profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tvProfile"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/titleProfile"/>
                <TextView
                        android:text="@string/profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/titleProfile" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingStart="8dp"
                        android:paddingEnd="12dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvPhone_Email"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:background="@color/colorGray" android:textAlignment="viewStart"
                        android:textSize="20sp"/>
                <TextView
                        android:text="@string/core_skills"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/titleCoreSkills"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingStart="8dp"
                        android:paddingEnd="12dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvProfile"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="20sp"
                        android:background="@color/colorGray"/>
                <TextView
                        android:text="@string/core_skills"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tvCoreSkills"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/titleCoreSkills"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"/>
                <TextView
                        android:text="@string/career_summary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/titleCareerSummary" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingStart="8dp"
                        android:paddingEnd="12dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:background="@color/colorGray" android:textAlignment="viewStart"
                        android:textSize="20sp"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvCoreSkills"/>
                <TextView
                        android:text="@string/career_summary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tvCareerSummary"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/titleCareerSummary"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"/>
                <TextView
                        android:text="@string/education_qualifications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/titleEducation_Qualifications" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingStart="8dp"
                        android:paddingEnd="12dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:background="@color/colorGray" android:textAlignment="viewStart"
                        android:textSize="20sp"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvCareerSummary"/>
                <TextView
                        android:text="@string/education_qualifications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tvEducation_Qualifications"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/titleEducation_Qualifications"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"/>
                <TextView
                        android:text="@string/references"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/titleReferences" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingStart="8dp"
                        android:paddingEnd="12dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:background="@color/colorGray" android:textAlignment="viewStart"
                        android:textSize="20sp"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvEducation_Qualifications"/>
                <TextView
                        android:text="@string/references"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tvReferences"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/titleReferences"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>